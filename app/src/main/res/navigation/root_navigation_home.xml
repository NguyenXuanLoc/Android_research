<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation_home"
    app:startDestination="@id/home1Fragment">

    <fragment
        android:id="@+id/home1Fragment"
        android:name="com.example.android_research.home.Home1Fragment"
        android:label="Home1Fragment"
        tools:layout="@layout/fragment_home1">
        <action
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            android:id="@+id/action_home1Fragment_to_home2Fragment"
            app:destination="@id/home2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/home2Fragment"
        android:name="com.example.android_research.home.Home2Fragment"
        android:label="Home2Fragment">
        <action
            android:id="@+id/action_home2Fragment_to_home3Fragment"
            app:destination="@id/home3Fragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/home3Fragment"
        android:name="com.example.android_research.home.Home3Fragment"
        android:label="Home3Fragment" />
</navigation>